<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelArmorHelmetReconBase">
    <defName>ArmorHelmetReconArctic</defName>
    <label>recon helmet (Arctic)</label>
    <description>A high-tech armored helmet with a built-in status computer and a protective plasteel-weave plate.\n\nArmor like this is often used by imperial scout troops or glitterworld police forces. This armour has an arctic camo pattern.</description>
    <graphicData>
      <texPath>Things/Item/ReconArm/Arctic/Apparel/ReconHelmetArctic</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <apparel>
      <tags>
        <li>PassiveCamo_Arctic_High</li>
        <li>SpacerMilitary</li>
        <li>RoyalCombatGear</li>
      </tags>
      <wornGraphicPath>Things/Item/ReconArm/Arctic/Head/ReconHelmetArctic</wornGraphicPath>
    </apparel>
    <thingCategories Inherit="false">
      <li>CASHeadgear</li>
    </thingCategories>
    <comps>
      <li Class="Observer.CompProperties_Observer">
        <SightOffset>+0.15</SightOffset>
      </li>
    </comps>
  </ThingDef>
